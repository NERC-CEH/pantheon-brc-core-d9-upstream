{#
/**
 * @file
 * Default theme implementation to present a menu link entity entity.
 *
 * Available variables:
 * - menu_link_content: Menu link entity.
 *
 * @see template_preprocess_menu_link_content()
 *
 * @ingroup themeable
 */
#}


{% set entityObject = elements['#menu_link_content'] %}
{% set rendered_content = content|without('field_body', 'field_image', 'children') %}

<div class="menu-item-child-items">
  {{ content.field_image }}
  {{ content.field_body }}
  {{ link("Go to " ~ entityObject.getTitle(), entityObject.getUrlObject()) }}

  {{ content.children }}
</div>

<div class="menu-item-dropdown-content">
  {% if rendered_content %}
    {{ rendered_content }}
  {% endif %}
</div>
