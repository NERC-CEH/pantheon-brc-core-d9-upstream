{
    "name": "pantheon-upstreams/drupal-project",
    "description": "Install Drupal 9 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		},
        {
            "type": "path",
            "url": "upstream-config"
        }
    ],
    "require": {
        "drupal/admin_toolbar": "^3.0",
        "drupal/backup_migrate": "5.0.0-rc2",
        "drupal/block_class": "^1.3",
        "drupal/bootstrap": "^3.23",
        "drupal/bootstrap_layouts": "^5.2",
        "drupal/captcha": "^1.1",
        "drupal/colorbox": "^1.7",
        "drupal/ctools": "^3.4",
        "drupal/editor_advanced_link": "^1.8",
        "drupal/entity": "^1.2",
        "drupal/entity_legal": "^3.0@beta",
        "drupal/eu_cookie_compliance": "^1.14",
        "drupal/field_group": "^3.1",
        "drupal/google_analytics": "^3.1",
        "drupal/imce": "^2.4",
        "drupal/insert": "2.0-beta2",
        "drupal/jquery_ui": "^1.4",
        "drupal/jquery_ui_accordion": "^1.1",
        "drupal/jquery_ui_tabs": "^1.1",
        "drupal/libraries": "^3.0@beta",
        "drupal/login_emailusername": "^1.2",
        "drupal/mailchimp": "^2.0",
        "drupal/masquerade": "^2.0@beta",
        "drupal/menu_per_role": "^1.3",
        "drupal/metatag": "^1.16",
        "drupal/pathauto": "^1.8",
        "drupal/responsive_tables_filter": "^1.7",
        "drupal/search_api": "^1.19",
        "drupal/smtp": "^1.0",
        "drupal/token": "^1.9",
        "drupal/views_bootstrap": "3.6",
        "drupal/views_data_export": "^1.0",
        "drush/drush": "^10",
        "pantheon-upstreams/upstream-config": "*"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
		"installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library","type:bower-asset", "type:npm-asset"],
            "web/modules/composer/{$name}": ["type:drupal-module"],
            "web/profiles/composer/{$name}": ["type:drupal-profile"],
            "web/themes/composer/{$name}": ["type:drupal-theme"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"], 			
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "drupal-scaffold": {
            "allowed-packages": [
                "pantheon-systems/drupal-integrations"
            ],
            "locations": {
                "web-root": "./web"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[project-root]/pantheon.upstream.yml": false,
                "[project-root]/.gitattributes": false
            }
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    }
}
